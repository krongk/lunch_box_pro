 <div class="dashboard_section panel">
  <h3>餐厅基本信息</h3>
  <div class="panel_contents">
   
  <div class="field">
    <b><%= f.label :name, '名称' %></b><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, '介绍' %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :biz_time, '营业时间' %><br />
    <%= f.text_field :biz_time %>
  </div>
  
  <br/>

  <div class="field">
    <b><%= f.label :has_out_food, '是否提供外卖:' %></b><%= f.check_box :has_out_food %><br />
    <%= f.label :start_price, '起送价:' %>
    <%= f.text_field :start_price %><br />
    <%= f.label :outer_price, '配送费:' %>
    <%= f.text_field :outer_price %>
  </div>

  <div class="field">
    <%= f.label :outer_time, '外送时间：' %><%= f.text_field :outer_time, :value => '10:00 - 14:00  18:00 - 21:00' %><br/>
    <%= f.label :shop_note, '店长公告：' %><%= f.text_field :shop_note%><br/>
    <%= f.label :outer_time, '餐厅状态：' %><%= f.select :take_out_status, TAKE_OUT_STATUS %> &nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.label :outer_time, '区域排名：' %><%= f.select :sort_id, (1..10) %> *(数值越大，排名越靠前) 
  </div>

  <div class="field">
    <%= f.label :has_out_people, '有配备外送人员:' %>
    <%= f.check_box :has_out_people %>&nbsp;&nbsp;

    <%= f.label :is_hot, '推荐:' %>
    <%= f.check_box :is_hot %>&nbsp;&nbsp;&nbsp;&nbsp;

    <%= f.label :hot_unitl, '推荐结束时间:' %>&nbsp;&nbsp;
    <%= f.date_select :hot_unitl %>
    <%= f.label :is_discount, '折扣：' %>
    <%= f.check_box :is_discount %>&nbsp;&nbsp;&nbsp;&nbsp;

    <%= f.label :discount_value, '折扣值:' %> <%= f.text_field :discount_value, :style => "width: 40px;" %>
  </div>
  
   <br/>

  <div class="field">
    <b><%= f.label :is_contacted, '是否营销联系过:' %></b>
    <%= f.check_box :is_contacted %>&nbsp;&nbsp;

    <%= f.label :is_dealed, '是否签约:' %>
    <%= f.check_box :is_dealed %> <br/>
    <%= f.label :note, '编辑备注：' %>
    <%= f.text_field :note %>
  </div>

  </div>
</div>