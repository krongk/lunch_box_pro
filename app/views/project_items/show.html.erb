    </div>
    <!--相关新闻-->
    <hr/>
    <div class="related">
     <h3>相关信息</h3>
     <ul>
       <% ProjectItem.recent_related(@project_item.tags.blank? ? @project_item.title : @project_item.tags.split(',').first).each do |item|%>
         <li><%= link_to item.title, project_item_path(item.id)%></li>
       <% end %>
     </ul>
    </div>
  </div>
</div>