<% title [@project_item.title, "成都红宝石企业建站"].join('-') %>
<% meta_keywords [@project_item.title,"建站成功案例，案例展示，成都红宝石企业建站，红宝石网络"].join('-') %>
<% meta_description [@project_item.title,"成都红宝石企业网站建设专家，开发团队具有多年互联网从业经验，团队为企业提供策划、开发、推广、运维一站式服务！联系电话：15928661802"].join('-') %>

<% content_for :aside do %>
  <br/>
  <%= project_tags %>
<% end %>

<div class="news_main">
  <div style="margin:4px;">首页 > <a href="/project_cates">项目资源库</a> > <%=link_to @project_item.project_cate.name, project_cate_path(@project_item.project_cate_id)%></div>

  <div class="titlerb">
    <h1><%= @project_item.title %></h1>
  </div>
  <div class="news_content">
  <%=show_project_item(:column => "项目标签", :value => @project_item.tags, :link => "/project_items?tag=#{@project_item.tags}")%>
  <%=show_project_item(:column => "分类", :value => @project_item.project_cate.name, :link => "/project_cates/#{@project_item.project_cate.id}")%>
  <%=show_project_item(:column => "项目状态", :value =>@project_item.status) %>
  <%=show_project_item(:column => "联系人", :value =>@project_item.name) %>
  <%=show_project_item(:column => "联系电话", :value =>@project_item.phone) %>
  <%=show_project_item(:column => "电子邮件", :value =>@project_item.email) %>
  <%=show_project_item(:column => "公司名", :value =>@project_item.company) %>
  <%=show_project_item(:column => "所在城市", :value =>@project_item.city) %>
  <%=show_project_item(:column => "联系地址", :value =>@project_item.address) %>
  <%=show_project_item(:column => "网站地址", :value =>@project_item.site_url) %>


    <div class="news_summary">
      <%=simple_format @project_item.summary.to_s.gsub(/^<br\/>|<p>/, '') unless @project_item.summary.blank?%>
    </div><hr/>
    &nbsp;&nbsp;&nbsp;&nbsp;<%=simple_format @project_item.content.to_s.gsub(/^<br\/>|<p>/, '') unless @project_item.content.blank?%>
   
