<div class="sidebar_section panel" id="help_sidebar_section">
  <h3>帮助中心</h3>
  <div class="panel_contents" id="side_bar_content">
    <ul>
      <li>本页保存客户前台的留言信息！</li>
    </ul>
  </div>
</div>

<div class="sidebar_section panel" id="order_sidebar_section">
  <h3>Happy外送菜单</h3>
  <div class="panel_contents" id="side_bar_content">
    <ul id="order_dish_list">
      <li>请点击左边菜单进行订餐！</li>
    </ul>
  </div>
</div>

<% if session[:cart] %>
  <div class="sidebar_section panel" id="cart_sidebar_section">
    <h3>Happy外送菜单</h3>
    <div class="panel_contents" id="side_bar_content">
      <ul id="cart_list">
      <% session[:cart].each do |k, v| %>
        <li id='cart_shop_dish_<%=k%>'><%= v[:name].ljust(15, '一')%> <%=v[:price] || 10 %> x <%=v[:count] || 1 %></li>
      <% end %>
      </ul>
      <% if session[:cart] %>
        <%= link_to "清空", clear_cart_path, :remote => true %> &nbsp;&nbsp;&nbsp;
        <%= link_to "生成订单", 'orders/new' %>
      <% end %>
    </div>
  </div>
<% end %>