<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Parent</th>
    <th>Position</th>
    <th>Menu match</th>
    <th>Show in menu</th>
    <th>Deletable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.body %></td>
    <td><%= page.parent_id %></td>
    <td><%= page.position %></td>

    <td><%= page.menu_match %></td>
    <td><%= page.show_in_menu %></td>
    <td><%= page.deletable %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

