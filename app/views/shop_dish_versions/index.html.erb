<h1>Listing shop_dish_versions</h1>

<table>
  <tr>
    <th>Shop</th>
    <th>Dish</th>
    <th>Price</th>
    <th>Is hot</th>
    <th>Is discount</th>
    <th>Discount value</th>
    <th>Description</th>
    <th>Is merged</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shop_dish_versions.each do |shop_dish_version| %>
  <tr>
    <td><%= shop_dish_version.shop %></td>
    <td><%= shop_dish_version.dish %></td>
    <td><%= shop_dish_version.price %></td>
    <td><%= shop_dish_version.is_hot %></td>
    <td><%= shop_dish_version.is_discount %></td>
    <td><%= shop_dish_version.discount_value %></td>
    <td><%= shop_dish_version.description %></td>
    <td><%= shop_dish_version.is_merged %></td>
    <td><%= link_to 'Show', shop_dish_version %></td>
    <td><%= link_to 'Edit', edit_shop_dish_version_path(shop_dish_version) %></td>
    <td><%= link_to 'Destroy', shop_dish_version, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

