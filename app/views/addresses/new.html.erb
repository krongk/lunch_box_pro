<script language = "javascript">
   jQuery(function() {
    return $('#address_addr').autocomplete({
      source: $('#address_addr').data('autocomplete-source'),
      minLength: 2,
      autoFocus: true,
      delay: 300
    });
  });
</script>

<div id="title_bar" height="400px">
  <%  @address ||= Address.new %>
  <%= form_for(@address, :html =>{:class => "formtastic"}) do |f| %>
	  <div class="flash flash_notice">*请输入您所在的位置， 如：科华北路62号力宝大厦</div>
	  <fieldset class="buttons">
	    <%= f.text_field :addr, data: {autocomplete_source: addresses_path}, :value => cookies[:location] %>
	    <%= f.submit '找外卖' %>
	  </fieldset>
  <% end %>
</div>