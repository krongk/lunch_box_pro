<% title ["乐活外卖"].join(' - ') %>
<% meta_keywords ["happy.cd"].join(' - ') %>
<% meta_description ["项目案例", "happy.cd"].join(' - ') %>


<h2>项目案例</h2>

<ul class="projects">
<% @product_items.each do |item| %>
    <li><%=link_to image_tag(item.image_path, :width => '140px'), product_item_path(item) %>
        <h4><%= link_to item.title, product_item_path(item) %></h4>
        <%= truncate_content(item.description, 120) %>
    </li>
<% end %>
</ul>

<hr/>
<%= will_paginate @product_items, :next_label => "下一页", :prev_label => "上一页" %>