<h1>Listing orders</h1>

<table>
  <tr>
    <th>Shop</th>
    <th>User</th>
    <th>Total price</th>
    <th>Phone</th>
    <th>Addr</th>
    <th>User note</th>
    <th>Status</th>
    <th>Admin note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.shop %></td>
    <td><%= order.user %></td>
    <td><%= order.total_price %></td>
    <td><%= order.phone %></td>
    <td><%= order.addr %></td>
    <td><%= order.user_note %></td>
    <td><%= order.status %></td>
    <td><%= order.admin_note %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

